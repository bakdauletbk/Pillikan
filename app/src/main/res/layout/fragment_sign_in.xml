<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding">


    <TextView
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/title_text_color"
        android:id="@+id/welcome_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/default_padding"
        android:gravity="center"
        android:text="@string/welcome_text"
        app:layout_constraintBottom_toTopOf="@id/welcome_description_tv" />

    <TextView
        android:textColor="@color/disable_text"
        android:id="@+id/welcome_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_padding"
        android:gravity="center"
        android:text="@string/welcome_description_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/welcome_ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding_big"
        android:background="@drawable/bg_orange_button"
        android:gravity="center"
        android:padding="@dimen/default_padding_small"
        android:text="@string/welcome_ok_text"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/welcome_description_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>