<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pillikan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="my_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">70%</item>
        <item name="windowMinWidthMinor">70%</item>
    </style>

    <style name="ModuleBase" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!-- Style attributes -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="counterTextAppearance">@style/HintText</item>

        <!-- Theme attributes -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColorHint">@color/unfocused_color</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="ModuleExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- Style attributes -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="counterTextAppearance">@style/HintText</item>
        <!-- Theme attributes -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColorHint">@color/unfocused_color</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <color name="black">#000000</color>
</resources>